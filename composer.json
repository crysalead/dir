{
    "name": "crysalead/dir",
    "description": "Recursive directory scanner to locate directories and/or files in a file system",
    "keywords": ["File System", "Directory Scanner", "Directory", "File"],
    "license": "MIT",
    "require": {
        "php": ">=5.4"
    },
    "require-dev": {
        "kahlan/kahlan": "~3.0"
    },
    "autoload": {
        "psr-4": {
            "Lead\\Dir\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lead\\Dir\\Spec\\": "spec/"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
